{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "location": {
                "type": "string"
            },
            "website": {
                "type": "string",
                "format": "uri"
            },
            "ref": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "creationYear": {
                "type": "integer",
                "minimum": 0
            }
        },
        "required": ["name", "location", "website", "ref", "description", "creationYear"],
        "additionalProperties": false
    }
}
